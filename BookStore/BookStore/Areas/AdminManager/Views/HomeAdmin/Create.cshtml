@model BookStore.SACH

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminManager/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm tour mới</h2>

@using (Html.BeginForm("SaveNewBook", "HomeAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Tour</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Tên sách", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TEN_SACH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TEN_SACH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Tác giả", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("TACGIA", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("TACGIA", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("NXB", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @{
                @Html.DropDownList("NXB", (IEnumerable<SelectListItem>)ViewBag.NXBList, new { @class = "form-control" })
                @Html.ValidationMessage("NXB", "", new { @class = "text-danger" })
            }
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Nội dung", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.NOI_DUNG, new { @class = "form-control", style = "width: 100%; height:300px;" })
            @Html.ValidationMessageFor(model => model.NOI_DUNG, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Giá", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.GIA, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GIA, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Thể loại", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @{
                @Html.DropDownList("THELOAI", (IEnumerable<SelectListItem>)ViewBag.CategoryList, new { @class = "form-control" })
            }
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Hình ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="somename">
            @Html.ValidationMessageFor(model => model.ANH, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div> 
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>