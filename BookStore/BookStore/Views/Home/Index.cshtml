        margin-right: auto;
        height: 230px;
    }

    .itm {
        border: 1px solid lightgray;
        margin-bottom: 10px;
        margin-left: 10px;
        margin-right: 10px;
        box-shadow: none;
        height: 340px;
    }
        .itm:hover {
            box-shadow:   5px 5px 5px darkgray;
            border: 1px solid black;
