@model BookStore.Models.BookDetails
@using PagedList.Mvc;
@{
    ViewBag.Title = "ProductInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/Product.js"></script>
<div class="hidden" id="MA_SACH" data-ma_Sach="@Model.sach.MA_SACH">
</div>
<form class="forminfo">
    <fieldset>
        <div class="col-lg-4">
            <img class="product-image img-responsive main" src="@Model.sach.ANH" alt="">
        </div>
        <div class="col-lg-8 info">
            <div class="row">
                <h2 id="bookname">@Model.sach.TEN_SACH</h2>
            </div>
            <div class="row">
                <p>
                    <div>
                        Tác giả:
                        @{
                            foreach (var item in Model.tg)
                            {
                                <a class="author" href="">@item.TEN_TAC_GIA</a>
                                <a>&#160;</a>
                            }
                        }
                    </div>
                    <div>Thể loại: @Model.tl.TEN_THE_LOAI</div>
                    <div>Nhà xuất bản:@Model.nxb.TEN_NXB</div>
                    <div>Ngày bán: @Model.sach.NGAY_BAN.ToShortDateString()</div>
                </p>
                <p>
                    <h3 class="price-sale">@Model.sach.GIA ₫</h3>
                </p>
            </div>
        </div>
    </fieldset>
    <fieldset>
        <div class="row">
            <h2 id="ContentTitle"><strong>Nội dung</strong></h2>
        </div>
        <div class="row">
            <!--sau này ghi nội dung rồi tách chuổi ở ~ chổ xuống hàng-->
            <div class="Noidung">
                @{
                    string[] NDs = Model.sach.NOI_DUNG.Split('\n');
                    foreach (string ND in NDs)
                    {
                        <p>@ND</p>
                    }
                }
            </div>
        </div>
    </fieldset>
</form>
<div class="comment row">
    <div class="panel with-nav-tabs panel-info">
        <div class="panel-heading">
            <center class="row">
                <h2>66% đánh giá tích cực</h2>
            </center>
            <div class="col-sm-offset-0">
                <ul class="nav navbar-brand nav-tabs-justified menu">
                    <li class="active"><a href="#tab1" data-toggle="tab" id="select">Bình luận</a></li>
                    <li><a href="#tab2" data-toggle="tab" id="select" class="positive" onclick="viewPositiveComments()">Đánh giá tích cực</a></li>
                    <li><a href="#tab3" data-toggle="tab" id="select">Đánh giá tiêu cực</a></li>
                </ul>
            </div>
        </div>
        <div class="panel-body col-md-offset-0">
            <div class="tab-content">
                <div class="tab-pane fade in active" id="tab1">
                    <fieldset>
                        <textarea id="cmt" style="width: 100%; height:150px;max-width:100%;margin: 0;"></textarea>
                        <input type="button" id="btnSend" value="Gửi" onclick="sendComment()" />
                        <div id="result"></div>
                    </fieldset>
                </div>
                <div class="tab-pane fade in" id="tab2">
                    <div class="positive-comment">

                        @{

                            var b = 0;
                            var dem = 1;
                            string cl = "p" + dem;
                            foreach (var item in ViewBag.PositiveCmts)
                            {
                                if (b == 10)
                                {
                                    b = 0;
                                    dem++;
                                    cl = "p" + dem;
                                }
                                b++;
                                <fieldset class="@cl">
                                    <div>
                                        <p id="y_kien">@item.NOI_DUNG</p>
                                        <em id="ngay_gui">@item.NGAY</em>
                                    </div>
                                </fieldset>
                            }
                            <center>
                                <ul class="pagination P">
                                    @{
                                        if (dem != 1)
                                        {

                                            for (int i = 1; i <= dem; i++)
                                            {
                                                string cls = "Pbtn" + i;
                                                if (i == 1)
                                                {
                                                    <li class="active" id="@cls"><a href="javascript:void(0);" onclick="changePPage(@i)">@i</a></li>
                                                    continue;
                                                }
                                                <li id="@cls"><a href="javascript:void(0);" onclick="changePPage(@i)">@i</a></li>

                                            }
                                        }
                                    }
                                </ul>
                            </center>
                        }
                    </div>
                </div>
                <div class="tab-pane fade in" id="tab3">
                    <div class="negative-comment">
                        @{
                            b = 0;
                            dem = 1;
                            cl = "n" + dem;
                            foreach (var item in ViewBag.NegativeCmts)
                            {
                                if (b == 10)
                                {
                                    b = 0;
                                    dem++;
                                    cl = "n" + dem;
                                }
                                b++;
                                <fieldset class="@cl">
                                    <div>
                                        <p id="y_kien">@item.NOI_DUNG</p>
                                        <em id="ngay_gui">@item.NGAY</em>
                                    </div>
                                </fieldset>
                            }
                            <center>
                                <ul class="pagination N">
                                    @{
                                        if (dem != 1)
                                        {

                                            for (int i = 1; i <= dem; i++)
                                            {
                                                string cls = "Nbtn" + i;
                                                if (i == 1)
                                                {
                                                    <li class="active" id="@cls"><a href="javascript:void(0);" onclick="changeNPage(@i)">@i</a></li>
                                                    continue;
                                                }
                                                <li id="@cls"><a href="javascript:void(0);" onclick="changeNPage(@i)">@i</a></li>
                                            }
                                        }
                                    }
                                </ul>
                            </center>
                        }
                    </div>
                    <!--negative-->
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .Noidung {
        margin-left: 20px;
        margin-right: 10px;
    }

    #select {
        padding-left: 5px;
        margin-right: 10px;
    }

        #select:hover {
            color: white;
            background-color: burlywood;
        }

        #select:focus {
            color: white;
            background-color: darkcyan;
        }

    .nav-tabs-justified > .active > a {
        border-bottom-color: #555;
        color: white;
        background-color: darkcyan;
    }

    .menu {
        margin-top: 3%;
    }

    .comment {
        margin: 0;
        margin-top: 20px
    }

    .author {
        text-decoration: underline;
        color: blue;
    }

    .forminfo {
        margin-top: 30px;
    }

    fieldset {
        border: 1px solid lightgray;
        box-shadow: 3px 3px lightgray;
    }

    .main {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 300px;
        height: 300px;
    }

    #ContentTitle {
        margin-left: 20px;
    }

    #bookname {
        color: darkcyan;
        text-shadow: 2px 2px lightgray;
    }

    pre {
        border: none;
        padding: 0;
        width: 95%;
        margin-left: 29px;
    }

    .suggest {
        margin: 0;
        margin-top: 30px;
    }

    h4.price-sale {
        text-align: center;
        color: black;
    }

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .itm {
        border: 1px solid lightgray;
        margin-bottom: 10px;
        margin-left: 32px;
        box-shadow: none;
    }

        .itm:hover {
            box-shadow: 3px 3px 3px 3px lightgray;
            border: 1px solid black;
        }

    .author {
        outline: none;
        color: #2e2d2d;
    }

        .author:hover {
            color: black;
            text-decoration: none;
        }
</style>
